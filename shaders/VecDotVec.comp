#version 450

#extension GL_EXT_shader_atomic_float: enable

#define index gl_GlobalInvocationID.x

layout(binding = 0) buffer x1Buffer { float x1[]; };
layout(binding = 1) buffer x2Buffer { float x2[]; };
layout(binding = 2) buffer normBuffer { float result; };

void main()
{
    atomicAdd(result, x1[index] * x2[index]);
}