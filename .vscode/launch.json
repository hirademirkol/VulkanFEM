    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Linux/src/Master",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/Linux/src/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: Build"
        },
        {
            "name": "(Windows) Launch (Debug)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Windows/src/Debug/Master.exe",
            "args": ["data/armadillo.dat"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/Windows/src/Debug/",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "CMake: Build"
        },
        {
            "name": "(Windows) Launch (Release)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Windows/src/Release/Master.exe",
            "args": ["data/armadillo.dat"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/Windows/src/Release/",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "CMake: Build"
        },
        {
            "name": "(Windows) Launch (RelWithDebInfo)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Windows/src/RelWithDebInfo/Master.exe",
            "args": ["data/kitten_128.dat"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/Windows/src/RelWithDebInfo/",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "CMake: Build"
        }
    ]
}